<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculatorActivity">

    <EditText
        android:id="@+id/userinput"
        android:layout_width="450dp"
        android:layout_height="320px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginLeft="19dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-18dp"
        android:layout_marginRight="-18dp"
        android:autoText="false"
        android:autofillHints=""
        android:background="@color/black"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/empty"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userinput"
        android:layout_alignEnd="@id/clearbtn"


        android:layout_alignRight="@id/clearbtn"
        android:layout_alignParentLeft="true"
        android:background="#242424"
        android:text=""
        app:backgroundTint="#242424" />

    <Button
        android:id="@+id/clearbtn"
        android:layout_width="270px"
        android:layout_height="wrap_content"
        android:layout_below="@id/userinput"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="268dp"
        android:background="#242424"
        android:text="Clear"
        app:backgroundTint="#242424" />

    <Button
        android:id="@+id/btn7"

        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@id/empty"
        android:layout_alignParentLeft="true"

        android:background="#162E51"
        android:text="7"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@id/empty"
        android:layout_toRightOf="@+id/btn7"
        android:background="#21323c"
        android:text="8"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@id/empty"
        android:layout_toRightOf="@+id/btn9"
        android:background="#242424"
        android:text="/"
        android:textSize="36sp"
        app:background="#000000"
        app:backgroundTint="#242424" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/empty"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:background="#21323c"
        android:text="9"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn7"
        android:layout_alignParentleft="true"
        android:background="#21323c"
        android:text="4"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn8"
        android:layout_toEndOf="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:background="#21323c"
        android:text="5"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:background="#21323c"
        android:text="6"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btnmulti"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@id/btndiv"
        android:layout_toRightOf="@+id/btn6"
        android:background="#242424"
        android:text="X"
        android:textSize="36sp"
        app:background="#000000"
        app:backgroundTint="#242424" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn4"
        android:layout_alignParentleft="true"
        android:background="#21323c"
        android:text="1"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="#21323c"
        android:text="2"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:background="#21323c"
        android:text="3"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:background="#242424"
        android:text="-"
        android:textSize="36sp"
        app:backgroundTint="#242424" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn1"
        android:layout_alignParentleft="true"
        android:background="#242424"
        android:text="."
        android:textSize="36sp"
        app:backgroundTint="#242424" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn1"
        android:layout_toEndOf="@id/btndot"
        android:layout_toRightOf="@id/btndot"
        android:background="#21323c"
        android:text="0"
        android:textSize="36sp"
        app:backgroundTint="#21323c" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@id/btn0"
        android:background="#242424"
        android:text="="
        android:textSize="36sp"
        app:backgroundTint="#242424" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="270px"
        android:layout_height="320px"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@id/btnequal"
        android:background="#242424"

        android:text="+"
        android:textSize="36sp"
        app:backgroundTint="#242424" />


</RelativeLayout>